ARG PYTHON_VERSION=3.11

FROM python:${PYTHON_VERSION}-slim

RUN apt-get update
RUN apt-get install -y build-essential gcc

WORKDIR /opt

COPY README.md README.md
COPY LICENSE LICENSE
COPY tipg/ tipg/
COPY pyproject.toml pyproject.toml

RUN pip install . uvicorn --no-cache-dir
RUN rm -rf tipg/ README.md pyproject.toml LICENSE

# http://www.uvicorn.org/settings/
ENV HOST 0.0.0.0
ENV PORT 8080
ENV WORKERS 4
ENV WEB_CONCURRENCY 4
ENV PYTHONWARNINGS ignore
ENV TIPG_DB_SCHEMAS '["tgia"]'
ENV TIPG_DB_EXCLUDE_FUNCTION_SCHEMAS '["tgia"]'
ENV DEBUG TRUE

CMD uvicorn tipg.main:app --host ${HOST} --port ${PORT} --workers ${WORKERS}
